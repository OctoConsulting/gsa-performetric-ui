<div class="grid-row grid-gap">
	{% for color in colors %}
		<div class="grid-col-12 tablet-lg:grid-col-7">
			<span{% if not header %} id="cardHeader" role="header" aria-level="1"{% endif %}>{{color.title}}</span>
			<div {% if not header %}aria-labelledby="cardHeader"{% endif %}class="sds-card {% for modifier in modifiers %} sds-card--{{modifier}}{% endfor %}">

				{% if header %}
					<div class="sds-card__header{% if color.modifier %} sds-card__header--{{color.modifier}}{% endif %} sds-card__header--{{header.style}}">

						{% if header.icon %}
							<div class="sds-card__icon">
								{% render '@icon', header.icon %}
							</div>
						{% endif %}

						{% if header.link %}
							<a href="{{header.link}}" class="sds-card__link">
						{% endif %}

						<h2 class="sds-card__title">{{title}}</h2>


						{% if header.link %}
							</a>
						{% endif %}

						{% if header.buttons %}
							<div class="sds-card__buttons">
								{% for button in header.buttons %}
									{% render '@buttons--single', {modifiers: button.modifiers }, true %}
								{% endfor %}
							</div>
						{% endif %}
					{% if header.action %}
						<div class="sds-card__action">
							{%- render '@actions--single' -%}
						</div>
					{% endif %}
					</div>
				{% endif %}

				<div class="sds-card__content">
					{% if body.list %}
						{% render '@list', {modifiers: ['bordered', 'unstyled'] }, true %}
					{% else %}
						{{ body }}
					{% endif %}
				</div>
			</div>
		</div>
	{% endfor %}
</div>
